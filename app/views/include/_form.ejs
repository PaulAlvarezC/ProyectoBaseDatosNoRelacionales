<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="row">
            <div class="form-group column">
                <label for="ci" class="text-light">Cédula</label>
                <input type="hidden" name="id" value="">
                <input name="ci" value="" placeholder="" 
                    oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                    type = "number"
                    maxlength = "10"
                    required
                >
            </div>
            <div class="form-group column" style="margin-left: 10px;">
                <label for="nombres" class="text-light">Nombres</label>
                <input type="text" name="nombres" value="" placeholder="" required>
            </div>
        </div>

        <div class="row">
            <div class="form-group column">
                <label for="centro" class="text-light">Centro de Vacunación</label>
                <input type="text" name="centro" value="" placeholder="" required>
            </div>
            <div class="form-group column" style="margin-left: 10px;">
                <label for="edad" class="text-light">Edad</label>
                <input name="edad" value="" placeholder=""
                    oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                    type = "number"
                    maxlength = "2"
                    required
                >
            </div>
        </div>
        <div class="form-group">
            <label for="vacuna" class="text-light">Vacuna: </label><br>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="vacuna" value="Pfizer">
                <label for="radio-2" class="radio-label">Pfizer</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="vacuna" value="Sinovak">
                <label for="radio-3" class="radio-label">Sinovak</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="vacuna" value="Astrazeneca">
                <label for="radio-4" class="radio-label">Astrazeneca</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="vacuna" value="Johnson & Johnson">
                <label for="radio-5" class="radio-label">Johnson & Johnson</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-6" name="vacuna" value="Moderna">
                <label for="radio-6" class="radio-label">Moderna</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-7" name="vacuna" value="Sputnik">
                <label for="radio-7" class="radio-label">Sputnik</label>
            </div>
        </div>

        <div class="row">
            <div class="form-group columna">
                <label for="fechaPrimeraDosis" class="text-light">Primera Dosis</label>
                <input type="date" name="fechaPrimeraDosis" value="" placeholder="2021-01-01" required>
            </div>
            <div class="form-group columna" style="margin-left: 10px;">
                <label for="vacunadorPrimeraDosis" class="text-light">Vacunador Primera Dosis</label>
                <input type="text" name="vacunadorPrimeraDosis" value="" placeholder="" required>
            </div>
            <div class="form-group columna" style="margin-left: 10px;">
                <label for="lotePrimeraDosis" class="text-light">Lote primera dosis</label>
                <input type="hidden" name="id" value="">
                <input type="text" name="lotePrimeraDosis" value="" placeholder="" required>
            </div>
        </div>

        <div class="row">
            <div class="form-group columna">
                <label for="fechaSegundaDosis" class="text-light">Segunda Dosis</label>
                <input type="date" name="fechaSegundaDosis" value="" placeholder="2021-01-01">
            </div>
            <div class="form-group columna" style="margin-left: 10px;">
                <label for="vacunadorSegundaDosis" class="text-light">Vacunador Segunda Dosis</label>
                <input type="text" name="vacunadorSegundaDosis" value="" placeholder="">
            </div>
            <div class="form-group columna" style="margin-left: 10px;">
                <label for="loteSegundaDosis" class="text-light">Lote segunda dosis</label>
                <input type="hidden" name="id" value="">
                <input type="text" name="loteSegundaDosis" value="" placeholder="">
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Registrar</button>
        </div>

    </div>
</form>